extends ./layout.jade

block append vars
    - var title = 'Home';
    
block append content
    include:markdown ../pages/index.md
    h2 Recent posts
    ul
        - posts.sort(function (a, b) {if (a.created > b.created) {return -1} else if (a.created === b.created) { return 0} else return 1})
            - for (var i = 0; i < posts.length && i < 6; i++)
                - if (posts[i].dir !== 'pages/')
                    li!= "<a href='" + posts[i].slug + "'>" + posts[i].title + "</a>"